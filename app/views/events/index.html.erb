<div class="container events-container">
  <h2>Your Events</h2>
  <div>
    <%= link_to "Create New Event", new_event_path, class: "btn btn-event" %>
  </div>
  <div class="cards">
    <div class="card-trip">
      <div class="card-trip-infos">
        <div>
          <% @events.each do |event| %>
            <h2><%= link_to event.title, event_path(event) %></h2>
            <p><%= event.description %></p>
          <% end %>
        </div>
        <% @events.moments.each do |moment| %>
            <h2 class="card-trip-date"><%= @moment.event_date %></h2>
        <% end %>
      </div>
    </div>
  </div>
</div>
